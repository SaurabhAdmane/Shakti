<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewModel"
            type="com.shakticoin.app.feats.OnboardChildViewModel" />
    </data>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="24dp">

            <TextView
                android:id="@+id/label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="35dp"
                android:layout_marginEnd="8dp"
                android:gravity="center_horizontal"
                android:text="@string/profile_additional_tellmore"
                android:textAppearance="@style/AppText.Body"
                android:textColor="@color/colorBrand"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/divider"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="16dp"
                android:background="@color/colorBrand"
                app:layout_constraintBottom_toBottomOf="@+id/label"
                app:layout_constraintEnd_toStartOf="@+id/label"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/label" />

            <View
                android:id="@+id/divider2"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="24dp"
                android:background="@color/colorBrand"
                app:layout_constraintBottom_toBottomOf="@+id/label"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/label"
                app:layout_constraintTop_toTopOf="@+id/label" />

            <com.shakticoin.app.widget.TextInputLayout
                android:id="@+id/secondaryEmailLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="24dp"
                style="@style/AppTextLayout"
                app:labelTextSize="11sp"
                app:labelFontTypeface="@font/lato"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/label">

                <com.shakticoin.app.widget.InlineLabelEditText
                    android:id="@+id/secondaryEmail"
                    style="@style/AppTextField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/feats_hint_secondary_email"
                    android:inputType="textEmailAddress"
                    android:text="@={viewModel.secondaryEmailAddress}" />
            </com.shakticoin.app.widget.TextInputLayout>

            <com.shakticoin.app.widget.TextInputLayout
                android:id="@+id/secondaryPhoneLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="24dp"
                style="@style/AppTextLayout"
                app:labelTextSize="11sp"
                app:labelFontTypeface="@font/lato"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/secondaryEmailLayout">

                <com.shakticoin.app.widget.InlineLabelEditText
                    android:id="@+id/secondaryPhone"
                    style="@style/AppTextField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/feats_hint_secondary_phone"
                    android:inputType="phone"
                    android:text="@={viewModel.secondaryPhoneNumber}" />
            </com.shakticoin.app.widget.TextInputLayout>

            <com.shakticoin.app.widget.TextInputLayout
                android:id="@+id/occupationLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="24dp"
                style="@style/AppTextLayout"
                app:labelTextSize="11sp"
                app:labelFontTypeface="@font/lato"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/secondaryPhoneLayout">

                <com.shakticoin.app.widget.InlineLabelEditText
                    android:id="@+id/occupation"
                    style="@style/AppTextField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/occupation"
                    android:inputType="text|textCapSentences|textCapWords"
                    android:text="@={viewModel.occupation}" />
            </com.shakticoin.app.widget.TextInputLayout>

            <com.shakticoin.app.widget.SpinnerLayout
                android:id="@+id/educationLevelLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="24dp"
                style="@style/AppTextLayout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/occupationLayout">

                <com.shakticoin.app.widget.InlineLabelSpinner
                    android:id="@+id/educationLevel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:popupBackground="@android:color/transparent"
                    android:entries="@{viewModel.educationLevelList}"
                    android:onItemSelected="@{(parent, view, position, id) -> viewModel.onEducationSelected(view, position)}"
                    app:newValue="@{viewModel.selectedEducationLevel}"
                    app:hint="@string/education_level"
                    app:textColorHint="@color/colorHint"
                    app:spinnerBorderColor="@color/colorBrand"/>
            </com.shakticoin.app.widget.SpinnerLayout>

            <Button
                android:id="@+id/doNext"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                android:text="@string/next"
                android:onClick="onNextAdditionalInfo"
                style="@style/AppButton.Rounded"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/educationLevelLayout" />

            <Button
                android:id="@+id/doCancel"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/cancel"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:onClick="onCancel"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/doNext" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>