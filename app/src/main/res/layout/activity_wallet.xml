<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <import type="android.view.View" alias="View"/>
        <variable
            name="viewModel"
            type="org.shakticoin.wallet.WalletModel"/>
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/wallet_background">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            android:background="@color/colorPrimaryDark">

            <ImageButton
                android:id="@+id/drawer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|start"
                android:padding="4dp"
                android:onClick="onDrawer"
                android:background="?attr/actionBarItemBackground"
                app:srcCompat="@drawable/ic_menu"
                tools:ignore="ContentDescription,RtlSymmetry" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wallet_toolbar_title"
                android:layout_gravity="center"
                android:textAppearance="@style/AppText.ToolBarTitle"/>

            <ImageButton
                android:id="@+id/messages"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:layout_marginEnd="6dp"
                android:layout_marginRight="6dp"
                android:padding="4dp"
                android:background="?attr/actionBarItemBackground"
                android:onClick="onNotifications"
                app:srcCompat="@drawable/ic_notification"
                tools:ignore="ContentDescription" />

        </android.support.v7.widget.Toolbar>

        <RelativeLayout
            android:id="@+id/fragments"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar"
            android:orientation="horizontal">

            <include layout="@layout/inline_drawer"/>
            <FrameLayout
                android:id="@+id/mainFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true">
            </FrameLayout>
            <include layout="@layout/inline_messages"/>

        </RelativeLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="@{viewModel.progressBarTrigger ? View.VISIBLE : View.INVISIBLE}"/>

    </RelativeLayout>
</layout>