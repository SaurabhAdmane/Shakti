<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <import type="android.view.View" alias="View"/>
        <variable
            name="viewModel" type="org.shakticoin.profile.KycSelectorViewModel"/>
    </data>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/scrollable_bottom_padding">

            <TextView
                android:id="@+id/label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="35dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:gravity="center_horizontal"
                android:text="@string/profile_kyc_proof"
                android:textAppearance="@style/AppText.Body"
                android:textColor="@color/colorBrand"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/divider"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:background="@color/colorBrand"
                app:layout_constraintBottom_toBottomOf="@+id/label"
                app:layout_constraintEnd_toStartOf="@+id/label"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/label" />

            <View
                android:id="@+id/divider2"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginEnd="24dp"
                android:layout_marginRight="24dp"
                android:background="@color/colorBrand"
                app:layout_constraintBottom_toBottomOf="@+id/label"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/label"
                app:layout_constraintTop_toTopOf="@+id/label" />

            <TextView
                android:id="@+id/description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="32dp"
                android:layout_marginRight="32dp"
                android:gravity="center_horizontal"
                android:text="@string/profile_kyc_description"
                android:textAppearance="@style/AppText.Body"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/label" />

            <org.shakticoin.widget.CheckableRoundButton
                android:id="@+id/selectPhoto"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="70dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:background="@android:color/transparent"
                android:tag="UTILITY"
                android:src="@drawable/selector_btn_round"
                android:enabled="true"
                app:is_checked="@={viewModel.utilityDocState}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/description"/>

            <org.shakticoin.widget.CheckableRoundButton
                android:id="@+id/selectUpload"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:background="@android:color/transparent"
                android:tag="FINANCE"
                android:src="@drawable/selector_btn_round"
                android:enabled="true"
                app:is_checked="@={viewModel.financeDocState}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/selectPhoto"/>

            <org.shakticoin.widget.CheckableRoundButton
                android:id="@+id/selectSkip"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:background="@android:color/transparent"
                android:tag="GOVERMENT"
                android:src="@drawable/selector_btn_round"
                android:enabled="true"
                app:is_checked="@={viewModel.govDocState}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/selectUpload"/>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="66dp"
                android:layout_marginEnd="24dp"
                android:layout_marginRight="24dp"
                android:text="@string/profile_kyc_choosed_of_three"
                android:textAppearance="@style/AppText.Body"
                android:textSize="13sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/selectSkip" />

            <Button
                android:id="@+id/doNext"
                style="@style/AppButton.Rounded"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="24dp"
                android:layout_marginRight="24dp"
                android:onClick="onDoKYC"
                android:text="@string/next"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView5" />

            <TextView
                android:id="@+id/doCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:text="@string/cancel"
                android:textAppearance="@style/AppButton.Link"
                android:clickable="true"
                android:focusable="true"
                android:onClick="onCancel"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/doNext" />

            <View
                android:id="@+id/leftCircle"
                android:layout_width="132dp"
                android:layout_height="132dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/bg_circular"
                app:layout_constraintBottom_toBottomOf="@+id/selectUpload"
                app:layout_constraintEnd_toStartOf="@+id/selectUpload"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/selectUpload" />

            <ImageView
                android:id="@+id/utilityIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="@{viewModel.utilityDocState ? View.VISIBLE : View.INVISIBLE}"
                android:tint="@color/colorBrand"
                app:layout_constraintBottom_toBottomOf="@+id/leftCircle"
                app:layout_constraintEnd_toEndOf="@+id/leftCircle"
                app:layout_constraintStart_toStartOf="@+id/leftCircle"
                app:layout_constraintTop_toTopOf="@+id/leftCircle"
                app:layout_constraintVertical_bias="0.3"
                app:srcCompat="@drawable/ic_kyc_utility"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/profile_kyc_utility_bills"
                android:textAppearance="@style/AppText.Body"
                android:textColor="#FFD9D9DA"
                android:gravity="center_horizontal"
                android:visibility="@{viewModel.utilityDocState ? View.VISIBLE : View.INVISIBLE}"
                app:layout_constraintEnd_toEndOf="@+id/leftCircle"
                app:layout_constraintStart_toStartOf="@+id/leftCircle"
                app:layout_constraintTop_toBottomOf="@+id/utilityIcon" />

            <ImageView
                android:id="@+id/propertyIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="@{viewModel.financeDocState ? View.VISIBLE : View.INVISIBLE}"
                android:tint="@color/colorBrand"
                app:layout_constraintBottom_toBottomOf="@+id/leftCircle"
                app:layout_constraintEnd_toEndOf="@+id/leftCircle"
                app:layout_constraintStart_toStartOf="@+id/leftCircle"
                app:layout_constraintTop_toTopOf="@+id/leftCircle"
                app:layout_constraintVertical_bias="0.3"
                app:srcCompat="@drawable/ic_kyc_property"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/profile_kyc_property"
                android:textAppearance="@style/AppText.Body"
                android:textColor="#FFD9D9DA"
                android:gravity="center_horizontal"
                android:visibility="@{viewModel.financeDocState ? View.VISIBLE : View.INVISIBLE}"
                app:layout_constraintEnd_toEndOf="@+id/leftCircle"
                app:layout_constraintStart_toStartOf="@+id/leftCircle"
                app:layout_constraintTop_toBottomOf="@+id/propertyIcon" />

            <ImageView
                android:id="@+id/govIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="@{viewModel.govDocState ? View.VISIBLE : View.INVISIBLE}"
                android:tint="@color/colorBrand"
                app:layout_constraintBottom_toBottomOf="@+id/leftCircle"
                app:layout_constraintEnd_toEndOf="@+id/leftCircle"
                app:layout_constraintStart_toStartOf="@+id/leftCircle"
                app:layout_constraintTop_toTopOf="@+id/leftCircle"
                app:layout_constraintVertical_bias="0.3"
                app:srcCompat="@drawable/ic_kyc_goverment"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/profile_kyc_gov"
                android:textAppearance="@style/AppText.Body"
                android:textColor="#FFD9D9DA"
                android:gravity="center_horizontal"
                android:visibility="@{viewModel.govDocState ? View.VISIBLE : View.INVISIBLE}"
                app:layout_constraintEnd_toEndOf="@+id/leftCircle"
                app:layout_constraintStart_toStartOf="@+id/leftCircle"
                app:layout_constraintTop_toBottomOf="@+id/govIcon" />

            <TextView
                android:id="@+id/utilityDesc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:text="@string/profile_kyc_utility_bills_desc"
                android:textAppearance="@style/AppText.Body"
                android:textSize="12sp"
                android:visibility="@{viewModel.utilityDocState ? View.VISIBLE : View.INVISIBLE}"
                app:layout_constraintBottom_toBottomOf="@+id/selectUpload"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/selectUpload"
                app:layout_constraintTop_toTopOf="@+id/selectUpload" />

            <TextView
                android:id="@+id/propertyDesc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:text="@string/profile_kyc_property_desc"
                android:textAppearance="@style/AppText.Body"
                android:textSize="12sp"
                android:visibility="@{viewModel.financeDocState ? View.VISIBLE : View.INVISIBLE}"
                app:layout_constraintBottom_toBottomOf="@+id/selectUpload"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/selectUpload"
                app:layout_constraintTop_toTopOf="@+id/selectUpload" />

            <TextView
                android:id="@+id/govDesc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:text="@string/profile_kyc_gov_desc"
                android:textAppearance="@style/AppText.Body"
                android:textSize="12sp"
                android:visibility="@{viewModel.govDocState ? View.VISIBLE : View.INVISIBLE}"
                app:layout_constraintBottom_toBottomOf="@+id/selectUpload"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/selectUpload"
                app:layout_constraintTop_toTopOf="@+id/selectUpload" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>
