<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Splash" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="AppText" parent="@style/TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:lineSpacingMultiplier">1.21</item>
    </style>
    <style name="AppText.Title" parent="AppText">
        <item name="android:textSize">24sp</item>
    </style>
    <style name="AppText.Title.Branded" parent="AppText.Title">
        <item name="android:textColor">@color/colorBrand</item>
    </style>
    <style name="AppText.Body" parent="AppText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
