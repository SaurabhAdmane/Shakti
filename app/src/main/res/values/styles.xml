<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Splash" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="AppText" parent="@style/TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:lineSpacingMultiplier">1.21</item>
        <item name="android:textFontWeight">600</item>
    </style>
    <style name="AppText.Title" parent="AppText">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/lato_light</item>
        <item name="android:textFontWeight">300</item>
    </style>
    <style name="AppText.Title.Branded" parent="AppText.Title">
        <item name="android:textColor">@color/colorBrand</item>
    </style>
    <style name="AppText.Subtitle" parent="AppText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#FFD9D9DA</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="AppText.Body" parent="AppText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="AppText.DialogText">
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#FF4A4A4A</item>
    </style>
    <style name="AppText.DialogTitle">
        <item name="android:fontFamily">@font/lato_light</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#FF4A4A4A</item>
    </style>
    <style name="AppText.ToolBarTitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:fontFamily">@font/futura_medium</item>
    </style>

    <style name="AppButton" parent="@style/Base.TextAppearance.AppCompat.Widget.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/futura_medium</item>
    </style>
    <style name="AppButton.Rounded">
        <item name="android:background">@drawable/button_rounded</item>
    </style>
    <style name="AppButton.Rounded.Grey">
        <item name="android:background">@drawable/button_rounded_grey</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textFontWeight">500</item>
    </style>
    <style name="AppButton.Link">
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="AppCheckbox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTextField" parent="AppTheme">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@color/colorHint</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/edit_bordered</item>
        <item name="borderColor">@color/colorBrand</item>
    </style>
    <style name="AppTextLayout" parent="AppTheme">
        <item name="labelTextSize">11sp</item>
        <item name="labelFontTypeface">@font/lato</item>
    </style>

    <style name="AppSpinner" parent="AppTheme">
        <item name="android:background">@drawable/edit_bordered</item>
    </style>
    <style name="AppSpinnerItem" parent="AppTheme">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="AppSpinnerDropdownItem" parent="AppTheme">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@android:color/black</item>
        <item name="android:padding">8dp</item>
    </style>

    <!-- Stripe card widget styling -->
    <style name="CardWidgetStyle" parent="@android:style/Theme.DeviceDefault">
        <item name="editTextStyle">@style/EditTextOverride</item>
        <item name="android:editTextStyle">@style/EditTextOverride</item>
    </style>

    <style name="EditTextOverride" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@color/colorHint</item>
        <item name="android:textSize">14sp</item>
    </style>
    <!-- End of Stripe styles -->

    <declare-styleable name="CheckableRoundButton">
        <attr name="is_checked" format="boolean" />
    </declare-styleable>

</resources>
